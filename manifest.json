{
  "manifest_version": 3,
  "name": "Error Fixer",
  "version": "1.0.0",
  "description": "A Chrome extension for fixing errors and tracking HCP/HCO data.",

  "permissions": ["storage", "activeTab", "scripting"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["settings.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
